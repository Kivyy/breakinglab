
<h1> Welcome <%= @user.full_name %> </h1>
<p>Lab position: <%= @user.access %></p>


<%  if @user.access == "faculty" %>
<div>
  <h3> Proposals : </h3>
    <ul>
      <% @user.proposals.each do |prop| %>
        <li><h3><%= link_to prop.summary, user_proposal_path(@user,prop) %></h3></li><br>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"><%= link_to 'Edit', edit_user_proposal_path(@user,prop) %></span>
        <span class="glyphicon glyphicon-fire" aria-hidden="true"><%= link_to 'Delete', user_proposal_path(@user,prop), method: :delete, data: { confirm: 'Are You Sure?'} %> </span>
      <% end %>
      <ul>
</div>

 <span class="glyphicon glyphicon-wrench" aria-hidden="true"><%= link_to 'Create a new proposal', new_user_proposal_path(@user) %> </span>

<% else %>
  <h3> Experiments : <h3>
    <ul>
      <% @user.experiments.each do |ex| %>
      <li><span class="glyphicon glyphicon-leaf" aria-hidden="true"><%= link_to ex.title, user_proposal_experiment_path(ex.experimenter, ex.proposal, ex) %></li><br>
    </ul>
      <% end %>
<% end %>
