<div class="form-group">

  <% if @proposal.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@proposal.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>
    <ul>
      <% @proposal.errors.full_messages.each do |msg| %>
      <li><%= msg %> </li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_for [@user, @proposal], :html => {:class => "form-group"} do |f| %>
    <div class="form-group">
      <label for="summary">Summary: </label>
      <%= f.text_field :summary, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="hypothesis">Hypothesis </label>
      <%= f.text_field :hypothesis, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, ['Open', 'In Progress', 'Closed', 'Archived'] %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div>
  <% end %>

</div>
