<% if @errors %>
  <%= render 'errors' %>
<% end %>
<%= form_for [@user, @proposal, @experiment] do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control", id: "exampleTextarea", rows: "3"  %><br>
  </p>
  <p>
    <%= f.label :results %><br>
    <%= f.text_area :results, class: "form-control", id: "exampleTextarea", rows: "3"  %><br>
  </p>
  <p>
    <%= f.label :conclusions %><br>
    <%= f.text_area :conclusions, class: "form-control", id: "exampleTextarea", rows: "3" %><br>
  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.select :status, ['Open', 'In Progress', 'Closed', 'Archived'] %><br>

    <%= f.submit %>
  </p>
<% end %>
